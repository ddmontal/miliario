<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('editar_usuario') %></h3>
    </div>
    <div class="panel-body">
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :alias %>
          <% if current_usuario.admin? || current_usuario.alias == 'admin' %>
          <i>(<%= t('no_editar_usuario_admin') %>)</i>

          <p class="form-control-static">
            <%= current_usuario.alias %>
          </p>
          <% else %>
            <%= f.text_field :alias, autofocus: true, class:'form-control' %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <% if current_usuario.admin? || current_usuario.alias == 'admin' %>
            <i>(<%= t('no_editar_usuario_admin') %>)</i>
            <p class="form-control-static">
              <%= current_usuario.email %>
            </p>
          <% else %>
            <%= f.email_field :email, class:'form-control' %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :nombre %>
          <%= f.text_field :nombre, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :procedencia %>
          <%= f.text_field :procedencia, class:'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "off", class:'form-control' %>
        </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-lg-12 text-right">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
