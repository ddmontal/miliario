<% content_for :home_content do %>
<div class="row">
  <div class="col-lg-12 text-center">
    <h1>
      <%= t('iniciar_sesion') %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-10">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-inline') do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.text_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>


      <div class="row">
        <div class="col-lg-1"></div>

        <div class="col-lg-4 text-center">
          <%= link_to t('registrarse'), new_registration_path(resource_name), class: "form-control btn btn-default" %>
        </div>

        <div class="col-lg-2"></div>

        <div class="col-lg-4 text-center">
          <div class="form-group">
            <%= f.submit t('iniciar_sesion'), class: 'form-control btn btn-primary' %>
          </div>
        </div>

        <div class="col-lg-1"></div>
      </div>

      <!-- <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 text-center">
          <%# f.submit t('iniciar_sesion'), class: 'form-control btn btn-primary' %>
        </div>
          <div class="col-lg-4"></div>
      </div> -->


      <!-- <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 text-center">
          <%# link_to t('registrarse'), new_registration_path(resource_name), class: 'btn btn-default' %>
        </div>
        <div class="col-lg-4"></div>
      </div> -->
    <% end %>
  </div>
  <div class="col-lg-1"></div>
</div>


<% end %>
<%= render 'home/home_layout' %>
