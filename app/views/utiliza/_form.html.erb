<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('utilizar_servicio') %></h3>
  </div>
  <%= form_for([@camino, @inicia, @etapa, @realiza, @servicio, @utiliza]) do |f| %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :fecha %>
        <%= f.text_field :fecha, value: l(@utiliza.fecha),
              class:'form-control datepicker', readonly: @deshabilitado %>
      </div>
      <div class="form-group">
        <%= f.label :nota %>
        <%= f.text_field :nota, class:'form-control', readonly: (@deshabilitado or @ya_evaluado) %>
      </div>
      <div class="form-group">
        <%= f.label :critica %>
        <%= f.text_area :critica, class:'form-control', readonly: (@deshabilitado or @ya_evaluado) %>
      </div>
    </div>

    <div class="panel-footer">
      <div class="row">
        <div class="col-lg-12 text-right">
          <% unless @deshabilitado %>
            <%= f.submit class: 'btn btn-primary' %>
          <% else %>
            <%= link_to icon('times', t('eliminar'), class: 'fa-fw'), camino_inicia_etapa_realiza_servicio_utiliza_path(@camino, @inicia, @etapa, @realiza, @servicio, @utiliza), method: :delete, class: "btn btn-danger", data: { confirm: t('esta_seguro') } %>
            <%= link_to(icon('pencil-square-o', t('editar'), class: 'fa-fw'), edit_camino_inicia_etapa_realiza_servicio_utiliza_path(@camino, @inicia, @etapa, @realiza, @servicio, @utiliza), class: 'btn btn-warning') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
