
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('realizar_etapa') %></h3>
  </div>
  <%= form_for([@camino, @inicia, @etapa, @realiza]) do |f| %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :fecha_inicio %>
        <%= f.text_field :fecha_inicio, value: l(@realiza.fecha_inicio),
              class:'form-control datepicker', readonly: @deshabilitado %>
      </div>
      <div class="form-group">
        <%= f.label :fecha_fin %>
        <%= f.text_field :fecha_fin, value: l(@realiza.fecha_fin),
              class:'form-control datepicker', readonly: @deshabilitado %>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-lg-12 text-right">
          <% unless @deshabilitado %>
            <%= f.submit class: 'btn btn-primary' %>
          <% else %>
            <%= link_to icon('times', t('eliminar'), class: 'fa-fw'), [@camino, @inicia, @etapa, @realiza], method: :delete, class: "btn btn-danger", data: { confirm: t('esta_seguro') } %>
            <%= link_to(icon('pencil-square-o', t('editar'), class: 'fa-fw'), edit_camino_inicia_etapa_realiza_path(@camino, @inicia, @etapa, @realiza), class: 'btn btn-warning') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
