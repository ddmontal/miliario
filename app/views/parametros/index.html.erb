<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <h3 class="panel-title col-lg-6">Listando par√°metros</h3>
          <div class="col-lg-6 text-right">
            <%= link_to icon('plus', t('nuevo'), class: 'fa-fw'), new_parametro_path, class: 'btn-xs btn-default' %>
          </div>
        </div>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Clave</th>
                  <th>Valor</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @parametros.each do |parametro| %>
                  <tr>
                    <td><%= parametro.clave %></td>
                    <td><%= parametro.valor %></td>
                    <td>
                      <%= link_to icon('eye', class: 'fa-fw'), parametro, class: 'btn-xs btn-primary' %>
                      <%= link_to icon('pencil', class: 'fa-fw'), edit_parametro_path(parametro), class: 'btn-xs btn-default' %>
                      <%= link_to icon('times', class: 'fa-fw'), parametro, method: :delete, data: { confirm: t('esta_seguro') }, class: 'btn-xs btn-danger' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <p id="notice"><%= notice %></p>
      </div>
    </div>
  </div>
</div>
